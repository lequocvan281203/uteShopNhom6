<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern> <!-- không add giao diện vào các api -->
	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>

	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<decorator name="homeweb" page="homeweb.jsp">
		<pattern>/home</pattern>
	</decorator>
	
	<decorator name="login" page="login.jsp">
		<pattern>/dang-nhap</pattern>
	</decorator>
	
	<decorator name="test" page="test.jsp">
		<pattern>/admin-category-edit</pattern>
	</decorator>
	
	
	
	
	
</decorators>